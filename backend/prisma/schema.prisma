generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Distribuidora {
  id                Int               @id @default(autoincrement())
  cnpj              String            @unique
  razaoSocial       String
  endereco          String
  statusAssinatura  StatusAssinatura  @default(AGUARDANDO_APROVACAO)
  dataExpiracao     DateTime?
  apiToken          String            @unique @default(uuid())
  usuarios          Usuario[]
  contaInstagram    ContaInstagram?
  conversas         Conversa[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Usuario {
  id              Int          @id @default(autoincrement())
  email           String       @unique
  googleId        String       @unique
  nome            String
  avatarUrl       String?
  distribuidora   Distribuidora? @relation(fields: [distribuidoraId], references: [id])
  distribuidoraId Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ContaInstagram {
  id                Int           @id @default(autoincrement())
  instagramPageId   String        @unique
  accessToken       String
  distribuidora     Distribuidora @relation(fields: [distribuidoraId], references: [id])
  distribuidoraId   Int           @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Conversa {
  id                Int           @id @default(autoincrement())
  clienteFinalIgId  String
  distribuidora     Distribuidora @relation(fields: [distribuidoraId], references: [id])
  distribuidoraId   Int
  mensagens         Mensagem[]

  @@unique([distribuidoraId, clienteFinalIgId])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Mensagem {
  id                 Int      @id @default(autoincrement())
  instagramMessageId String   @unique
  content            String
  senderId           String
  conversa           Conversa @relation(fields: [conversaId], references: [id])
  conversaId         Int
  timestamp          DateTime @default(now())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum StatusAssinatura {
  AGUARDANDO_APROVACAO
  ATIVO
  INATIVO
  CANCELADO
}
